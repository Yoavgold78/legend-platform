{
  "name": "api-gateway",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nodemon src/server.js",
    "build": "echo 'No build needed for Node.js'",
    "start": "node src/server.js",
    "lint": "eslint . --no-error-on-unmatched-pattern || echo 'No files to lint'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "@legend/types": "*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "express-oauth2-jwt-bearer": "^1.7.1",
    "http-proxy-middleware": "^3.0.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@legend/config": "*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4",
    "typescript": "^5.4.0"
  }
}
